# Copy this to .env and fill with real values (DO NOT commit secrets)
# Local DB for non-docker/dev:
DATABASE_URL=mongodb://localhost:27017/mern-docker-app

# When running with docker-compose, service hostname is 'mongo':
MONGO_URI=mongodb://mongo:27017/mydatabase

# Server port
PORT=5000

# JWT secret (replace with a secure random string if you enable auth)
# Example generation:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=replace_with_secure_random_hex_64

NODE_ENV=development